<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whu.wuyue_backend.mapper.UserMapper">
    <insert id="userRegister" parameterType="com.whu.wuyue_backend.model.User" useGeneratedKeys="true" keyProperty="id">
        insert into user(username, password) values(#{username}, #{password})
    </insert>

    <select id="userLogin" resultType="com.whu.wuyue_backend.model.User">
        select * from user where username= #{username} and password= #{password}
    </select>

    <select id="getUserByName" parameterType="String" resultType="com.whu.wuyue_backend.model.User">
        select * from user where username= #{username}
    </select>
</mapper>